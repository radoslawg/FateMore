<root>
	<windowclass name="charsheet_abilities">
		<sheetdata>
		  <!--  Stunts / Powers  -->
			<frame_char name="stuntsframe">
				<bounds>15,0,240,480</bounds>
			</frame_char>
			<label_frametop>
				<anchored to="stuntsframe"/>
				<static textres="char_label_stunts"/>
			</label_frametop>
			<list_charstunt name="stunts">
			  <anchored to="stuntsframe">
          <left offset="15"/>
          <top offset="35"/>
          <right offset="-15"/>
          <bottom offset="-20"/>
        </anchored>
      </list_charstunt>
      <scrollbar_list>
        <anchored to="stunts"/>
        <target>stunts</target>
      </scrollbar_list>
      <button_iedit name="stunts_iedit">
        <anchored to="stunts" position="aboveright" offset="5,5"/>
        <target>stunts</target>
      </button_iedit>
      <button_iadd name="stunts_iadd">
        <anchored to="stunts_iedit" position="lefthigh" offset="5,0"/>
        <target>stunts</target>
      </button_iadd>

			<!-- Weapons -->
			<frame_char name="weaponframe">
				<bounds>255,0,240,120</bounds>
