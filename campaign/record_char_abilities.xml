      <button_iadd name="weapons_iadd">
        <anchored to="weapons_iedit" position="lefthigh" offset="5,0"/>
        <target>weapons</target>
      </button_iadd>

			<!-- Armour -->
			<frame_char name="armourframe">
				<bounds>255,120,240,120</bounds>
			</frame_char>
			<label_frametop>
				<anchored to="armourframe"/>
